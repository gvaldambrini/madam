{{> settings_header }}

<div class="content-body">

    {{> form_errors}}

    <form class="form-horizontal" method="post" action='' id="form">
        <div class="form-controls" id="form-controls">
            {{#each items}}
            <div class="form-group">
                <label class="control-label col-sm-2" for="name">{{../i18n.name}}</label>
                <div class="col-sm-10">
                    <div class="settings-row">
                        <div class="col-xs-10">
                            {{#if ../hasColorpicker}}
                            <div class="input-group">
                                <input class="form-control" type="text" name="name" value="{{this.name}}" disabled="disabled">
                                <input type="hidden" name="color" class="colorpicker-field" value="{{this.color}}">
                                <span class="input-group-addon colorpicker-selector disabled"><i></i></span>
                            </div>
                            {{else}}
                            <input class="form-control" type="text" name="name" value="{{this}}" disabled="disabled">
                            {{/if}}
                        </div>
                        <div class="col-xs-1">
                            {{#if @first}}
                            <button class="btn btn-default btn-add" disabled="disabled">
                                <i class="glyphicon glyphicon-plus"></i>
                            </button>
                            {{else}}
                            <button class="btn btn-default btn-remove" disabled="disabled">
                                <i class="glyphicon glyphicon-minus"></i>
                            </button>
                            {{/if}}
                        </div>
                    </div>
                </div>

            </div>
            {{/each}}
        </div>

        <input type='hidden' name="_csrf" value="{{csrftoken}}">
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary" name="submit" data-save-text='{{i18n.save}}'>{{i18n.unlock}}</button>
            </div>
        </div>
        <script>
            $(document).ready(Settings.init({
                {{#if hasColorpicker}}
                colorpicker: true,
                defaultColor: "{{config.defaultWorkerColor}}",
                {{/if}}
                {{#if flash}}
                enabled: true
                {{/if}}
            }));
        </script>
    </form>

</div>