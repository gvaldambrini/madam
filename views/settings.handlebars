{{> settings_header }}

<div class="settings-content">

    {{> form_errors}}

    <form class="form-horizontal" method="post" action='' id="form">
        <div class="form-controls" id="form-controls">
            {{#each items}}
            <div class="form-group">
                <label class="control-label col-sm-2" for="name">{{i18n.name}}</label>
                <div class="col-sm-8">
                    <input class="form-control" type="text" name="name" placeholder="{{i18n.name}}" value="{{this}}" disabled="disabled">
                </div>
                {{#if @first}}
                <button class="btn btn-default btn-add" disabled="disabled">
                    <i class="glyphicon glyphicon-plus"></i>
                </button>
                {{else}}
                <button class="btn btn-default btn-remove" disabled="disabled">
                    <i class="glyphicon glyphicon-minus"></i>
                </button>
                {{/if}}
            </div>
            {{/each}}
        </div>

        <input type='hidden' name="_csrf" value="{{csrftoken}}">
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary" name="submit" data-save-text='{{i18n.save}}' data-update-text='{{i18n.update}}'>{{i18n.update}}</button>
            </div>
        </div>
        <script>
            $(document).ready(Settings.init({
                {{#if flash}}
                enabled: true
                {{/if}}
            }));
        </script>
    </form>

</div>