{{> customer_header }}

<div class="appointments-content">
    <a href='{{newAppointmentUrl}}' class='btn btn-primary'>{{i18n.createNew}}</a>

    <table class='table table-hover'>
        <thead>
            <th>{{i18n.date}}</th>
            <th>{{i18n.services}}</th>
        </thead>
        <tbody>
            {{#each appointments}}
                <tr data-edit-url='{{edit_url}}'>
                    <td>{{{date}}}</td>
                    <td>{{{services}}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
