{{#if this.customers}}
<table class='table table-hover'>
    <thead>
        <th>{{this.headerName}}</th>
        <th>{{this.headerSurname}}</th>
        <th>{{this.headerPhone}}</th>
    </thead>
    <tbody>
        {{#each this.customers}}
            <tr data-edit-url='{{urlEdit}}'>
                <td>{{{name}}}</td>
                <td>{{{surname}}}</td>
                <td>{{{phone}}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
    <div class="alert alert-info" role="alert">{{this.emptyMsg}}</div>
{{/if}}
