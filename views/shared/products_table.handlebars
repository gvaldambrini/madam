{{#if this.products}}
<table class='table table-hover'>
    <thead>
        <th>{{this.headerName}}</th>
        <th>{{this.headerBrand}}</th>
        <th>{{this.headerCount}}</th>
        <th></th>
    </thead>
    <tbody>
        {{#each this.products}}
            <tr data-toggle="collapse" data-target="#expanded-row{{@index}}">
                <td>{{{name}}}</td>
                <td>{{{brand}}}</td>
                <td>{{{count}}}</td>
                <td class="no-padding">
                    <span class="pull-right glyphicon glyphicon-plus" data-toggle="tooltip" data-placement="left" title="{{cloneText}}" data-clone-url='{{urlClone}}'></span>
                </td>
            </tr>
            <tr><td colspan=4 class="hidden-row">
                <div id="expanded-row{{@index}}" class="collapse">
                    <table class='table table-hover'>
                        <thead data-toggle="collapse" data-target="#expanded-row{{@index}}">
                            <th>{{headerDate}}</th>
                            <th>{{headerNotes}}</th>
                            <th></th>
                        </thead>
                        <tbody>
                        {{#each objects}}
                        <tr data-edit-url='{{urlEdit}}'>
                            <td>{{{date}}}</td>
                            <td>{{{notes}}}</td>
                            <td class="no-padding">
                                <span class="pull-right glyphicon glyphicon-trash" data-toggle="tooltip" data-placement="left" title="{{deleteText}}" data-delete-url='{{urlDelete}}'></span>
                            </td>
                        </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </td></tr>
        {{/each}}
    </tbody>
</table>
{{else}}
    <div class="alert alert-info" role="alert">{{this.emptyMsg}}</div>
{{/if}}
