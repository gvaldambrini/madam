          </td>
        </tr>
      );
    });

    return (
      <div className="table-responsive" id='appointments-table-container'>
        <table className='table table-hover'>
          <thead>
            <tr>
              <th>{this.props.headerDate}</th>
              <th>{this.props.headerServices}</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {appointmentRows}
          </tbody>
