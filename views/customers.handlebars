    return {
      data: [],
      loaded: false
    };
  },
  componentWillMount: function() {
    this.updateTable();
  },
  updateTable: function() {
    var that = this;
    $.ajax({
      url: '/customers/' + this.props.params.id + '/appointments',
      method: 'get',
      success: function(data) {
        that.setState({
          data: data,
