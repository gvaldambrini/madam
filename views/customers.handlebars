var CustomerForm = React.createClass({
  mixins: [ History ],
  getInitialState: function() {
    return {
      data: {},
      editForm: false,
      errors: []
    }
  },
  componentWillMount: function() {
    var that = this;
    if (this.props.params.id) {
      $.ajax({
        url: '/customers/' + this.props.params.id,
        method: 'get',
        success: function(data) {
          that.setState({
            data: data,
            editForm: true,
            errors: []
          });
        }
      });
    }
  },
  submitForm: function(event) {
    var that = this;
    var targetName = event.currentTarget.name;
    event.preventDefault();
    event.stopPropagation();
    $.ajax({
      url: this.state.editForm ? '/customers/' + this.props.params.id : '/customers',
      method: this.state.editForm ? 'put': 'post',
      data: JSON.stringify(this.state.data),
      contentType: 'application/json',
      success: function(data) {
        if (targetName === 'submit-and-add') {
          that.history.pushState(null, '/edit/' + data.id + '/appointments/new');
        }
        else {
          that.history.pushState(null, '/');
        }
      },
      error: function(xhr, textStatus, errorThrown) {
        var errors = [];
        for (var i = 0; i < xhr.responseJSON.errors.length; i++) {
          errors[errors.length] = xhr.responseJSON.errors[i].msg;
        }
        that.setState({
          errors: errors
        });
      }
    });
  },
  handleChange: function(name, value) {
    var data = this.state.data;
    if (data[name] != value) {
      data[name] = value;

      this.setState({
        data: data
      });
    }
  },
  render: function() {
    var errors;
    if (this.state.errors.length > 0) {
      var errorMessages = this.state.errors.map(function(err) {
        return (<li key={err}>{err}</li>);
      });

      errors = (
        <div className="alert alert-danger">
          <ul>
            {errorMessages}
          </ul>
        </div>
      );
    }

    var submitText, formTitle;
    if (this.state.editForm) {
      submitText = '{{i18n.customer.submitEdit}}';
      formTitle = '{{i18n.editCustomer}}';
    }
    else {
      submitText = '{{i18n.customer.submitAdd}}';
      formTitle = '{{i18n.createNewCustomer}}';
    }

    var additionalButtons;
    if (!this.state.editForm) {
      additionalButtons = (
        <button type="button" className="btn btn-primary" name="submit-and-add"
          onClick={this.submitForm}>
          {{i18n.customer.submitAndAdd}}
        </button>
      )
    }
    return (
      <div className="content-body">
        {errors}
        <div className="form-container" id="form-container">
          <form id="form" className="form-horizontal customer" method="post"
            action=''>
            <div className="form-group">
              <h4 className="col-sm-10 col-sm-offset-2">{formTitle}</h4>
            </div>
            <div className="form-group">
              <div className="col-sm-10 col-sm-offset-2 mandatory-fields">
                {{{i18n.customer.mandatoryFields}}}
              </div>
            </div>
            <FormInput type='text' name='name' value={this.state.data.name}
              label='{{i18n.customer.name}}' focus={true} mandatory={true}
              handleChange={this.handleChange}/>
            <FormInput type='text' name='surname' value={this.state.data.surname}
              label='{{i18n.customer.surname}}' handleChange={this.handleChange}/>
            <FormInputAndCheckbox type='tel' value={this.state.data.mobile_phone}
              name='mobile_phone' label='{{i18n.customer.mobile_phone}}'
              cbname='allow_sms' cblabel='{{i18n.customer.allow_sms}}'
              cbvalue={this.state.data.allow_sms}
              handleChange={this.handleChange}/>
            <FormInput type='tel' name='phone' value={this.state.data.phone}
              label='{{i18n.customer.phone}}' handleChange={this.handleChange}/>

            <FormInputAndCheckbox type='email' value={this.state.data.email}
